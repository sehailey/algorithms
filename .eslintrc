{
  "extends": ["eslint:recommended"],

  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },

  "rules": {
    "consistent-return": [0],
    "key-spacing": [0],
    "quotes": [1, "single"],
    "new-cap": [0],
    "no-multi-spaces": [0],
    "no-shadow": [0],
    "no-unused-vars": [1],
    "no-use-before-define": [2, "nofunc"],
    # "react/jsx-no-undef": 1,
    # "react/jsx-uses-react": 1,
    # "react/jsx-uses-vars": 1,
    # "react/prop-types": 0,
    "indent": [1, 2],
    "semi": [1, "never"],
    "max-len": 0,
    "no-console": 0,
    "no-irregular-whitespace": 0
  }
}
